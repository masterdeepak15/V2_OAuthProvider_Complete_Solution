@page "/Account/VerifyEmail"
@model OAuthProviderV2.Pages.Account.VerifyEmailModel
@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/><title>Email Verification</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>
</head>
<body class="bg-light">
<div class="min-vh-100 d-flex align-items-center justify-content-center">
    <div class="card border-0 shadow-lg text-center p-5" style="width:460px;max-width:95vw;">
        <div style="font-size:56px;margin-bottom:16px;">@(Model.Success ? "✅" : "❌")</div>
        <h4 class="fw-bold mb-3">@(Model.Success ? "Email Verified!" : "Verification Failed")</h4>
        <p class="text-muted">@Model.Message</p>
        @if (Model.Success)
        {
            <a href="/Account/Login" class="btn btn-primary mt-3">Sign In Now →</a>
        }
        else
        {
            <a href="/Account/Login" class="btn btn-outline-secondary mt-3">Back to Login</a>
        }
    </div>
</div>
</body>
</html>

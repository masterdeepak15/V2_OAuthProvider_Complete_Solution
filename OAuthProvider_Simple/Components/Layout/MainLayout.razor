@inherits LayoutComponentBase
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

<div class="d-flex min-vh-100">
    <!-- Sidebar -->
    <nav class="sidebar bg-dark text-white" style="width:260px;min-height:100vh;flex-shrink:0;">
        <div class="p-3 border-bottom border-secondary">
            <div class="d-flex align-items-center gap-2">
                <div class="bg-primary rounded p-2">
                    <svg width="20" height="20" fill="white" viewBox="0 0 24 24"><path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/></svg>
                </div>
                <div>
                    <div class="fw-bold">OAuth Provider</div>
                    <small class="text-muted" style="font-size:11px;">Admin Console</small>
                </div>
            </div>
        </div>

        <div class="p-2 mt-2">
            <small class="text-muted px-3 text-uppercase fw-semibold" style="font-size:10px;letter-spacing:1px;">Main</small>
            <ul class="nav flex-column mt-1">
                <li class="nav-item">
                    <NavLink class="nav-link text-white rounded mx-1 px-3 py-2" href="/" Match="NavLinkMatch.All">
                        <svg class="me-2" width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/></svg>
                        Dashboard
                    </NavLink>
                </li>
            </ul>

            <small class="text-muted px-3 text-uppercase fw-semibold mt-3 d-block" style="font-size:10px;letter-spacing:1px;">Management</small>
            <ul class="nav flex-column mt-1">
                <li class="nav-item">
                    <NavLink class="nav-link text-white rounded mx-1 px-3 py-2" href="/projects">
                        <svg class="me-2" width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M10 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z"/></svg>
                        Projects
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-white rounded mx-1 px-3 py-2" href="/clients">
                        <svg class="me-2" width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
                        OAuth Clients
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-white rounded mx-1 px-3 py-2" href="/users">
                        <svg class="me-2" width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/></svg>
                        Users
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-white rounded mx-1 px-3 py-2" href="/tokens">
                        <svg class="me-2" width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"/></svg>
                        Tokens
                    </NavLink>
                </li>
            </ul>

            <small class="text-muted px-3 text-uppercase fw-semibold mt-3 d-block" style="font-size:10px;letter-spacing:1px;">Developer</small>
            <ul class="nav flex-column mt-1">
                <li class="nav-item">
                    <NavLink class="nav-link text-white rounded mx-1 px-3 py-2" href="/docs">
                        <svg class="me-2" width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M14 2H6c-1.1 0-2 .9-2 2v16c0 1.1.89 2 2 2h12c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/></svg>
                        API Docs
                    </NavLink>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="flex-grow-1 d-flex flex-column">
        <!-- Topbar -->
        <header class="bg-white border-bottom px-4 py-3 d-flex align-items-center justify-content-between" style="min-height:64px;">
            <div>
                <h5 class="mb-0 fw-semibold text-dark">Admin Console</h5>
            </div>
            <div class="d-flex align-items-center gap-3">
                <span class="badge bg-success">Online</span>
                <AuthorizeView>
                    <Authorized>
                        <div class="d-flex align-items-center gap-2">
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                 style="width:34px;height:34px;font-size:14px;font-weight:600;">
                                @context.User.Identity?.Name?.Substring(0, 1).ToUpper()
                            </div>
                            <div>
                                <div style="font-size:13px;font-weight:500;">@context.User.Identity?.Name</div>
                                <form method="post" action="/Account/Logout" style="display:inline;">
                                    <button type="submit" class="btn btn-link p-0 text-muted" style="font-size:11px;">
                                        Sign out
                                    </button>
                                </form>
                            </div>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </div>
        </header>

        <!-- Page Content -->
        <main class="flex-grow-1 bg-light p-4">
            <ErrorBoundary>
                @Body
            </ErrorBoundary>
        </main>
    </div>
</div>

<style>
    .nav-link:hover { background-color: rgba(255,255,255,0.1) !important; }
    .nav-link.active { background-color: rgba(99,102,241,0.3) !important; border-left: 3px solid #6366f1; }
</style>

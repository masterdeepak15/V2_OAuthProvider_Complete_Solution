@page "/clients"
@using OAuthProvider.Services
@using OAuthProvider.Models
@inject IDashboardService Dashboard
@inject NavigationManager Nav
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]

<PageTitle>OAuth Clients â€” OAuth Provider</PageTitle>

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h4 class="fw-bold mb-1">OAuth Clients</h4>
        <p class="text-muted mb-0">Manage all registered OAuth client applications</p>
    </div>
    <a href="/clients/create" class="btn btn-primary">
        <svg class="me-1" width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/></svg>
        New Client
    </a>
</div>

@if (_projects == null)
{
    <div class="text-center p-5"><div class="spinner-border text-primary"></div></div>
}
else
{
    @foreach (var project in _projects)
    {
        <div class="mb-4">
            <div class="d-flex align-items-center gap-2 mb-3">
                <svg width="16" height="16" fill="#6366f1" viewBox="0 0 24 24"><path d="M10 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z"/></svg>
                <h6 class="mb-0 fw-semibold">@project.Name</h6>
                <span class="badge bg-light text-muted">@project.Clients.Count clients</span>
            </div>
            @if (project.Clients.Count == 0)
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center text-muted py-4 small">No clients in this project</div>
                </div>
            }
            else
            {
                <div class="card border-0 shadow-sm">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="px-4">Name</th>
                                    <th>Client ID</th>
                                    <th>Grant Types</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var client in project.Clients)
                                {
                                    <tr>
                                        <td class="px-4">
                                            <div class="fw-medium">@client.Name</div>
                                            <small class="text-muted">@(client.Description ?? "")</small>
                                        </td>
                                        <td><code class="small bg-light px-1 rounded">@client.ClientId</code></td>
                                        <td>
                                            @foreach (var gt in client.AllowedGrantTypes)
                                            {
                                                <span class="badge bg-info bg-opacity-10 text-info me-1 small">@gt.GrantType</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge @(client.IsEnabled ? "bg-success" : "bg-secondary")">@(client.IsEnabled ? "Active" : "Disabled")</span>
                                        </td>
                                        <td class="text-muted small">@client.CreatedAt.ToString("MMM d, yyyy")</td>
                                        <td>
                                            <a href="/clients/@client.Id" class="btn btn-sm btn-outline-primary">Manage</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    }
}

@code {
    private List<Project>? _projects;

    protected override async Task OnInitializedAsync()
    {
        _projects = await Dashboard.GetProjectsAsync();
        foreach (var p in _projects)
        {
            var clients = await Dashboard.GetClientsByProjectAsync(p.Id);
            p.Clients = clients;
        }
    }
}

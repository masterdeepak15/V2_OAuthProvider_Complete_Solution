@page "/projects/{Id:int}"
@using OAuthProvider.Services
@using OAuthProvider.Models
@inject IDashboardService Dashboard
@inject NavigationManager Nav
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]

<PageTitle>Project Detail — OAuth Provider</PageTitle>

@if (_project == null)
{
    <div class="text-center p-5"><div class="spinner-border text-primary"></div></div>
}
else
{
    <div class="d-flex align-items-center gap-2 mb-4">
        <a href="/projects" class="btn btn-sm btn-outline-secondary">← Back</a>
        <div>
            <h4 class="fw-bold mb-0">@_project.Name</h4>
            <p class="text-muted mb-0 small">@(_project.Description ?? "No description")</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Clients -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 d-flex align-items-center justify-content-between">
                    <h6 class="mb-0 fw-semibold">OAuth Clients (@_project.Clients.Count)</h6>
                    <a href="/clients/create?projectId=@Id" class="btn btn-sm btn-primary">+ Add Client</a>
                </div>
                <div class="card-body p-0">
                    @if (_project.Clients.Count == 0)
                    {
                        <div class="text-center text-muted py-4">No clients yet — add one above</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light"><tr><th class="px-4">Name</th><th>Client ID</th><th>Status</th><th>Actions</th></tr></thead>
                                <tbody>
                                    @foreach (var c in _project.Clients)
                                    {
                                        <tr>
                                            <td class="px-4 fw-medium">@c.Name</td>
                                            <td><code class="small">@c.ClientId</code></td>
                                            <td><span class="badge @(c.IsEnabled ? "bg-success" : "bg-secondary")">@(c.IsEnabled ? "Active" : "Disabled")</span></td>
                                            <td><a href="/clients/@c.Id" class="btn btn-sm btn-outline-primary">Manage</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Members -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0 fw-semibold">Members (@_project.ProjectUsers.Count)</h6>
                </div>
                <div class="list-group list-group-flush">
                    @foreach (var pu in _project.ProjectUsers)
                    {
                        <div class="list-group-item d-flex align-items-center justify-content-between">
                            <div>
                                <div class="fw-medium small">@pu.User?.Email</div>
                                <span class="badge bg-light text-dark">@pu.Role</span>
                            </div>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => RemoveMember(pu.UserId)">Remove</button>
                        </div>
                    }
                    @if (_project.ProjectUsers.Count == 0)
                    {
                        <div class="list-group-item text-muted text-center py-3">No members</div>
                    }
                </div>
                <div class="card-footer bg-white">
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control" @bind="_addUserId" placeholder="User ID..." />
                        <button class="btn btn-primary" @onclick="AddMember">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }
    private Project? _project;
    private string _addUserId = "";

    protected override async Task OnInitializedAsync() => _project = await Dashboard.GetProjectAsync(Id);

    private async Task AddMember()
    {
        if (!string.IsNullOrWhiteSpace(_addUserId))
        {
            await Dashboard.AssignUserToProjectAsync(Id, _addUserId.Trim(), "developer");
            _addUserId = "";
            _project = await Dashboard.GetProjectAsync(Id);
        }
    }

    private async Task RemoveMember(string userId)
    {
        await Dashboard.RemoveUserFromProjectAsync(Id, userId);
        _project = await Dashboard.GetProjectAsync(Id);
    }
}

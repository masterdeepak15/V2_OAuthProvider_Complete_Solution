@page
@model OAuthProvider.Pages.Account.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In — OAuth Provider</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/app.css" />
</head>
<body class="bg-light">

<div class="min-vh-100 d-flex align-items-center justify-content-center">
    <div class="card border-0 shadow-lg" style="width:440px;max-width:95vw;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                     style="width:56px;height:56px;">
                    <svg width="28" height="28" fill="white" viewBox="0 0 24 24">
                        <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
                    </svg>
                </div>
                <h4 class="fw-bold mb-1">OAuth Provider</h4>
                <p class="text-muted mb-0 small">Sign in to the Admin Console</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger py-2 small">@Model.ErrorMessage</div>
            }

            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

                <div class="mb-3">
                    <label class="form-label fw-medium">Email address</label>
                    <input type="email"
                           name="Email"
                           class="form-control form-control-lg @(Model.ErrorMessage != null ? "is-invalid" : "")"
                           value="@Model.Email"
                           placeholder="admin@oauthprovider.dev"
                           autocomplete="username"
                           required />
                </div>

                <div class="mb-4">
                    <label class="form-label fw-medium">Password</label>
                    <input type="password"
                           name="Password"
                           class="form-control form-control-lg"
                           placeholder="••••••••"
                           autocomplete="current-password"
                           required />
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 fw-semibold">
                    Sign In
                </button>
            </form>

            <div class="text-center mt-4">
                <small class="text-muted">Default: admin&#64;oauthprovider.dev / Admin&#64;123456!</small>
            </div>
        </div>
    </div>
</div>

</body>
</html>
